= link_to '#', image_path('action_2019.jpg'), class: 'image-popup', style: 'top: -10; left: 0; position: absolute;', id: 'autopopup'

- content_for :after_js_load do
  javascript:
    $(function() {
      function setCookie(cname, cvalue, exdays) {
        var d = new Date();
        d.setTime(d.getTime() + (exdays*24*60*60*1000));
        var expires = "expires="+ d.toUTCString();
        document.cookie = cname + "=" + cvalue + ";" + expires + ";path=/";
      }

      function getCookie(cname) {
        var name = cname + "=";
        var decodedCookie = decodeURIComponent(document.cookie);
        var ca = decodedCookie.split(';');

        for(var i = 0; i <ca.length; i++) {
          var c = ca[i];
          while (c.charAt(0) == ' ') {
            c = c.substring(1);
          }

          if (c.indexOf(name) == 0) {
            return c.substring(name.length, c.length);
          }
        }

        return undefined;
      }
      
      if (getCookie("banner_showed") == undefined) {
        setCookie("banner_showed", true, 2)
        $('#autopopup').click();
      }
    
    });